%main#signin.user-form.valign-wrapper
  .row
    .col.s12.m8.offset-m2.l6.offset-l3
      .card
        .card-content.center
          %h1 Welcome back!
          = form_with model: @session, url: signin_path do |form|
            .input-field
              = form.text_field :email, placeholder: "Email"
            .input-field
              = form.password_field :password, placeholder: "Password"
            %button.btn.btn-large.waves-effect.waves-light{ type: "submit" }
              Get me in!